<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:cardCornerRadius="20dp"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="130dp">

            <ImageView
                android:id="@+id/image"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:src="@drawable/orderstatus" />

            <TextView
                android:id="@+id/txt_invoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/image"
                android:gravity="center_horizontal"
                android:foregroundGravity="center_horizontal"
                android:paddingTop="15dp"
                android:textStyle="italic"
                android:text="#Invoice"
                android:textColor="@color/colormerah"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txt_jeniscetak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_invoice"
                android:layout_toRightOf="@id/image"
                android:gravity="center_horizontal"
                android:foregroundGravity="center_horizontal"
                android:paddingTop="5dp"
                android:textStyle="bold"
                android:text="Jenis Cetak"
                android:textColor="#000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txt_tanggalpesan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_jeniscetak"
                android:layout_toRightOf="@id/image"
                android:gravity="center_horizontal"
                android:foregroundGravity="center_horizontal"
                android:paddingTop="5dp"
                android:textStyle="bold"
                android:text="Tanggal Pesan"
                android:textColor="#000"
                android:textSize="18sp" />



            <TextView
                android:id="@+id/txt_statuspesanan"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/txt_tanggalpesan"
                android:paddingRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/image"
                android:gravity="bottom|right"
                android:paddingTop="15dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:text="Status Produk"
                android:textSize="16sp" />




            <TextView
                android:id="@+id/txt_lebar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/txt_panjang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/txt_jumlahpesanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/txt_gambar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/txt_jumlahharga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>



            <TextView
            android:id="@+id/txt_statustransfer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

            <TextView
                android:id="@+id/txt_id_transaksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/txt_id_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>