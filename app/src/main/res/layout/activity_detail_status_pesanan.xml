<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context=".StatusOrder.DetailStatusPesanan">



    <FrameLayout
        android:id="@+id/frame_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <LinearLayout
        android:id="@+id/linera1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="0dp"
        tools:ignore="MissingConstraints">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorbar"
        app:popupTheme="@style/ThemeOverlay.AppCompat"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detail Transaksi"
            android:gravity="center"
            android:textSize="23dp"
            android:textStyle="bold"
            android:textColor="#fff"/>

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">
    <LinearLayout
        android:id="@+id/linearLayoutw2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:paddingTop="10dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:layout_width="360dp"
        app:cardCornerRadius="15dp"
        android:background="#CCffffff"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:id="@+id/layout_tanya_jawab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"
            android:paddingBottom="30dp"
            android:padding="5dp"
            >


            <TextView
                android:id="@+id/tvnomorinvoice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nomor Invoice"
                android:textStyle="italic"
                android:textSize="20dp"
                android:textColor="#000"
                android:paddingBottom="10dp"
               />


            <TextView
                android:id="@+id/text_namalengkap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/tvnomorinvoice"
                android:text="Nama Lengkap :"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txt_namalengkap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvnomorinvoice"
                android:layout_toEndOf="@+id/text_namalengkap"
                android:layout_toRightOf="@+id/text_namalengkap"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"
                android:textColor="#c40101"
                android:textStyle="bold"/>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    </LinearLayout>
    </ScrollView>
    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>